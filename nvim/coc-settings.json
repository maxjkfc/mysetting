{
  // 啟動 json 的插件
  "json.enable": true,
  "json.format.enable": true,
  "tabnine.triggers": ["tab"],
  "snippets.ultisnips.directories": ["gosnippets/UltiSnips"],
  // 需要隱藏的檔案規則
  "explorer.file.hiddenRules": {
    "extensions": ["o", "a", "obj", "pyc"],
    "filenames": [".git", ".DS_Store", ".vscode"],
    "patternMatches": []
  },
  "explorer.width": 30, // 管理畫面寬度
  "explorer.file.showHiddenFiles": true, // 顯示隱藏的檔案
  "explorer.icon.enableNerdfont": true, // 啟動icon 字體
  // 快捷鍵設定
  "explorer.keyMappings.global": {
    "i": false, // cancel default mapkey
    "k": "nodePrev",
    "j": "nodeNext",
    "*": "toggleSelection",
    "<tab>": "actionMenu",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "o": ["expanded?", "collapse", "expand"],
    "<cr>": ["expandable?", "cd", "open"],
    "e": "open",
    "s": "open:split",
    "v": "open:vsplit",
    "t": "open:tab",
    "<bs>": "gotoParent",
    "gp": "preview:labeling",
    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",
    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",
    ".": "toggleHidden",
    "R": "refresh",
    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "X": "systemExecute",
    "f": "search",
    "F": "searchRecursive",
    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",
    "[[": "sourcePrev",
    "]]": "sourceNext",
    "[d": "diagnosticPrev",
    "]d": "diagnosticNext",
    "[g": "gitPrev",
    "]g": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
  },
  // coc-go
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true
  },
  "diagnostic-languageserver.filetypes": {
    "go": "revive",
    "markdown": "markdownlint",
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "go": "goimports",
    "sh": "shellcheck"
  }
}
